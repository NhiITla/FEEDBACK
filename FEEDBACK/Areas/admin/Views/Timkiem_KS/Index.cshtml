@model IEnumerable<FEEDBACK.Models.Loai_KS>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:blue; font-style:italic">Các loại Khách sạn hiện có</h2>
<br />
<p>
    @Html.ActionLink("Thêm Loại khách sạn", "Create")
</p>
<table class="table">
    <tr>
        <th style="text-align:center">
            Mã loại khách sạn
        </th>

        <th>
            Ghi chú
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.maloai_KS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ghichu)
            </td>
            <td>
                @Html.ActionLink("Sửa ", "Edit", new { id = item.maloai_KS }) |
                @Html.ActionLink("Chi tiết ", "Details", new { id = item.maloai_KS }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.maloai_KS })
            </td>
        </tr>
    }
    <br />
    <br />
</table>
@Html.ActionLink(" >> Trang Quản lý khách sạn ", "Index","Danhmuc_KS")