
@{
    ViewBag.Title = "Đăng nhập";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .dang-nhap {
            
            color: white;
            
        }
    </style>
</head>
<body>
    <h2 style="text-align:center"></h2>
    <h3>@ViewBag.Message</h3>
    @{
        ViewBag.Title = "Đăng nhập";
    }
    <div class="row" style="margin:60px 0">
        <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align:center"><span><i class="glyphicon glyphicon-log-in"></i> </span>Chào mừng</h3>
                </div>
                <div class="panel-body" style="text-align: -webkit-center;">
                    <form class="form-horizontal" method="post" role="form" action="">

                        @Html.AntiForgeryToken()
                        @* tai khoan *@
                        <div class="form-group has-feedback">
                            <label class="control-label col-md-3 col-sm-3">Tài khoản </label>
                            <div class="col-md-9 col-sm-9">
                                <input class="form-control"
                                       name="ten_dn"
                                       placeholder="Tài khoản"
                                       autofocus
                                       required>

                            </div>
                        </div>
                        @* mat khau *@
                        <div class="form-group has-feedback">
                            <label class="control-label col-sm-3">Mật khẩu </label>
                            <div class="col-sm-9">
                                <input class="form-control"
                                       type="password"
                                       name="matkhau"
                                       placeholder="Mật khẩu">
                            </div>
                        </div>
                        @* dang-ky *@
                        <div class="text-center">
                            <h5 style="font-style: italic;">
                                <br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký", "Signup", "Home")
                            </h5>

                        </div>
                        @* btn dang nhap *@
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-8">
                                <button type="submit" class="btn btn-primary">
                                    <a style="color:white">
                                        <i class="	glyphicon glyphicon-log-in"></i>
                                    </a> Đăng nhập
                                </button>
                            </div>

                        </div>
                        <span class="text-danger"> @ViewBag.err</span>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>

