@model IEnumerable<FEEDBACK.Models.Danhmuc_KS>

@{
    ViewBag.Title = "Danhsach_KS";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Page level plugin CSS   Content/css/login.css-->
